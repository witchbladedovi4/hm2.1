<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0">
            <Button Content="Поток progressbar" 
        Height="50"
        Width="120"
        Click="Button_Click"
                    x:Name="butProgressBar"/>
            <ProgressBar
                x:Name="progress"
                Height="100"
                Width="200"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <Button Content="Поток с приоритетам" 
                    Height="50"
                    Width="120"
                    Click="Button_Click2"
                    x:Name="button2"
                    />
            <ProgressBar Height="100" Width="200" Margin="10"
                         x:Name="progres2"/>
            <TextBlock x:Name="textBlock"/>
        </StackPanel>
        <Button Grid.Column="1" Width="120"
                Height="50"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Content="Potoc without Despatcher"
                x:Name="button2WitchoutDispather"
                Click="button2WitchoutDispather_Click"
                Margin="0 0 5 0"/>
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
            <Button Height="70" Width="100" Content="Запустить"
                    Click="Button_Click_2Zadanie"
                    x:Name="ss"/>
            <WrapPanel Margin="50 10 0 0">
                <ProgressBar Height="20" Width="100" Margin="100 0 0 0" 
                             x:Name="progressBar1"/>
                <ProgressBar Height="20" Width="100" Margin="100 0 0 0"
                             x:Name="progressBar2"/>
                <ProgressBar Height="20" Width="100" Margin="100 0 0 0"
                             x:Name="progressBar3"/>
            </WrapPanel>
            <WrapPanel Margin="190 0 0 0 ">
                <TextBlock Text="as" x:Name="textBlock1"/>
                <TextBlock Text="as" Margin="190 0 0 0" x:Name="textBlock2"/>
                <TextBlock Text="as" Margin="190 0 0 0" x:Name="textBlock3"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
